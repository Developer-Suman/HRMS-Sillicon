@page
@model LoginModel

@{ Layout = null; }


@{ ViewData["Title"] = "Log in"; }
<link href="~/assets/css/style.css" rel="stylesheet" />


<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>

    <!-- Meta data -->
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta content="DayOne - It is one of the Major Dashboard Template which includes - HR, Employee and Job Dashboard. This template has multipurpose HTML template and also deals with Task, Project, Client and Support System Dashboard." name="description">
    <meta content="Spruko Technologies Private Limited" name="author">
    <meta name="keywords" content="admin dashboard, dashboard ui, backend, admin panel, admin template, dashboard template, admin, bootstrap, laravel, laravel admin panel, php admin panel, php admin dashboard, laravel admin template, laravel dashboard, laravel admin panel" />

    <!-- Title -->
    <title>HRMS_Silicon</title>

    <!--Favicon -->
    <link rel="icon" href="assets/images/brand/favicon.ico" type="image/x-icon" />

    <!-- Bootstrap css -->
    <link href="assets/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <!-- Style css -->
    <link href="assets/css/style.css" rel="stylesheet" />
    <link href="assets/css/dark.css" rel="stylesheet" />
    <link href="assets/css/skin-modes.css" rel="stylesheet" />

    <!-- Animate css -->
    <link href="assets/plugins/animated/animated.css" rel="stylesheet" />

    <!---Icons css-->
    <link href="assets/plugins/icons/icons.css" rel="stylesheet" />

    <!-- Select2 css -->
    <link href="assets/plugins/select2/select2.min.css" rel="stylesheet" />

    <!-- P-scroll bar css-->
    <link href="assets/plugins/p-scrollbar/p-scrollbar.css" rel="stylesheet" />



    <!-- INTERNAL Switcher css -->
    <link href="assets/switcher/css/switcher.css" rel="stylesheet" />
    <link href="assets/switcher/demo.css" rel="stylesheet" />

</head>

<body>

    <div class="page relative error-page3">
        <div class="row no-gutters">
            <div class="col-xl-6 h-100vh">
                <div class="cover-image h-100vh" data-image-src="#">
                    <img src="~/assets/images/photos/login3.jpg"  style="height:680px;"/>
                    <div class="container">
                        <div class="customlogin-imgcontent">
                            <h2 class="mb-3 fs-35 text-white">Welcome To Human Resource Management System</h2>
                            <p class="text-white-50">
                                @*HRMS is a software application used to manage human resources and related processes throughout
                                the employee lifecycle. HRMS software makes it possible for  staff and managers to better allocate their time and
                                resources to more productive, profitable efforts.It is a system where employees and employers can access and update
                                their information.*@
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 bg-white h-100vh">
                <div class="container">
                    <div class="customlogin-content" style="padding: 0rem;">
                        <div class="pt-4 pb-2">
                            <a class="header-brand" href="#">
                                <img src="~/Img/logo-mini.png" class="header-brand-img custom-logo" alt="SiliconSoft">
                                <img src="~/Img/logo-white -mini.png" class="header-brand-img custom-logo-dark" alt="Dayonelogo">
                            </a>
                        </div>
                        <div class="p-4 pt-6">
                            <h1 class="mb-2">Login</h1>
                            <p class="text-muted">Sign In to your account</p>
                        </div>
                        <form class="card-body pt-3" id="account" method="post">
                            @*<div asp-validation-summary="All" class="text-danger"></div>*@
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.UserNameOrEmail" class="form-label"></label>
                                <input asp-for="Input.UserNameOrEmail" class="form-control" placeholder="UserName/Email">
                                <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" placeholder="password" type="password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            @*<div class="form-group">
                                <label asp-for="Input.RememberMe" class="custom-control custom-checkbox">
                                    <input asp-for="Input.RememberMe" type="checkbox" class="custom-control-input" name="example-checkbox1" value="option1">
                                    <span asp-validation-for="Input.Password" class="custom-control-label">Remember me</span>
                                </label>
                            </div>*@
                            <div class="submit">
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>
                            <div class="text-center mt-3">
                                <p class="mb-2"><a asp-page="./ForgotPassword">Forgot Password</a></p>
                                @*<p class="text-dark mb-0">Don't have account?<a class="text-primary ml-1" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></p>*@
                                <p class="text-dark mb-0">Don't have account? You can always request Admin for your Registration. Thank You !</p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Jquery js-->
    @*<script src="assets/plugins/jquery/jquery.min.js"></script>*@

    <!-- Bootstrap4 js-->
    <script src="assets/plugins/bootstrap/popper.min.js"></script>
    <script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>





    <!-- Select2 js -->
    <script src="assets/plugins/select2/select2.full.min.js"></script>

    <!-- P-scroll js-->
    <script src="assets/plugins/p-scrollbar/p-scrollbar.js"></script>

    <!-- Custom js-->
    <script src="assets/js/custom.js"></script>

    <!-- Switcher js -->
    <script src="assets/switcher/js/switcher.js"></script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
