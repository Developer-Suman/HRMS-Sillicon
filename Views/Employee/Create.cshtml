<script>

    $("#file").change(function () {
        readURL(this);
    });

    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }

    }


    //jQuery submit form when Enter key is pressed

    $("#formIdCreateEmployee").keypress(function (event) {
        if (event.which == '13' && !event.shiftKey) {
            $("#submitButtonEmployee").click();
            event.preventDefault();
            //return false;
        }
    });



    //For Create
    // function will get executed
    // on click of submit button





    $("#submitButtonEmployee").click(function (ev) {
        debugger

        //var form = $("#formIdCreateEmployee").serialize();
        var formdata = new FormData(document.getElementById("formIdCreateEmployee"));

        var files = document.getElementById('file').files;// $('#file').files[0];// e.target.files;

        if (files.length > 0) {
            if (window.FormData !== undefined) {
                for (var x = 0; x < files.length; x++) {
                    formdata.append("file" + x, files[x]);
                    //data.append(base64String, base64String);
                }
            } else {
                alert("Upgrade your browser!");
            }
        }

        //$("#formIdCreateEmployee").validate();
        //$("#commentForm").validate();

        var validator = $("#formIdCreateEmployee").validate();
        if (validator.form() == "") {
            //If the "Please Select" option is selected display error.

            $.toast({
                heading: 'Error',
                text: 'Create Failed Please fill out the Required Details',
                icon: 'error',
                position: 'top-right'
            })

            return false;
        }

        $.ajax({
            type: "POST",
            url: "/Employee/Create",
            data: formdata,
            contentType: false,
            processData: false,
            success: function (data) {
                debugger

                if (data == true) {

                    $.toast({
                        heading: 'Success',
                        text: 'Employee Create Success',
                        icon: 'success',
                        position: 'top-right'
                    })



                    setTimeout(function () {
                        /*alert('Reloading Page');*/
                        //location.reload(true);
                        window.location.href = "Index"
                    }, 3000);
                }

                else {
                    $.toast({
                        heading: 'Error',
                        text: 'Employee Create Failed Please fill out the Required Details',
                        icon: 'error',
                        position: 'top-right'
                    })

                    //$("#formIdCreateEmployee").validate();


                }


            },


            error: function (data) {


                debugger
                $.toast({
                    heading: 'Error',
