@{
    ViewData["title"] = "Projects";
}

@*Add Task Button*@
@await Html.PartialAsync("~/Views/TaskManager/_AddTask.cshtml")

<link href="~/css/TaskManager/allTasks.css" rel="stylesheet" />
<link href="~/css/TaskManager/projects.css" rel="stylesheet" />

<section class="projects">
    <div class="card">
        <div class="card-body">
            <div class="container d-flex justify-content-between align-items-center">
                <h5>Projects</h5>

                <button class="btn btn-primary" data-target="#add-project__container" data-toggle="modal"><i class="feather feather-plus "></i>Add New Project</button>
            </div>

            <table class="table table-responsive table-borderless ">
                <thead>
                    <tr>
                        <th>SN</th>
                        <th>Project Title</th>
                        <th>Todo Tasks</th>
                        <th>Running Tasks</th>
                        <th>Completed Tasks</th>
                        <th>Overdue Tasks</th>
                        <th>Employees</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>AIMS</td>
                            <td class="todo">Summary Meeting</td>
                            <td class="running">Upload files to live server</td>
                            <td class="completed">Complete pharmacy</td>
                            <td class="overdue">Update Design</td>
                            <td class="employee">

                                <div class="employee-image__container">
                                    <img src="https://images.unsplash.com/photo-1570295999919-56ceb5ecca61?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="Brajesh Gupta" />
                                    <span class="employee-name">Brajesh Gupta</span>
                                </div>
                                <div class="employee-image__container">
                                    <img src="https://images.unsplash.com/photo-1633332755192-727a05c4013d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="Ram Kumar Shrestha" />
                                    <span class="employee-name">Ram Kumar Shrestha</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@*Add Project Form in Modal*@
<section id="add-project__container" class="modal fade ">
    <div class="modal-dialog modal-dialog-centered">

        <div class="modal-content card">
            <div class="card-body">

                <form method="POST" action="">
                    <h1 class="text-center text-uppercase title">Add Project</h1>


                    <div class="form-group">
                        <label for="title">Project Name:</label>
                        <input type="text" name="Title" id="title" class="form-control" />
                    </div>

                    @*Actions button*@
                    <div class="d-flex justify-content-end align-items-center">
                        <button class="btn btn-outline-dark  w-30 mr-2 p-2" type="button" data-dismiss="modal">Close</button>
                        <button class="btn btn-primary w-30 p-2" type="submit">Add</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>