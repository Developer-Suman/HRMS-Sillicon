@*Add Task Button*@
<div class="d-flex flex-column-reverse " id="add-task__btn" >
    <button class="border-0 bg-transparent icon1 mt-1" data-toggle="modal" data-target="#add-task__container">
        <i class="feather feather-plus mr-1 bg-info  p-4 brround"></i>
    </button>
    <span class="add-task__info">Create New Task</span>
</div>
@*Add Task Information*@


@*Add Task Form*@
<section id="add-task__container" class="modal fade">
    <div class="modal-dialog">

        <div class="modal-content card">
            <div class="card-body">

                <form method="POST" action="">
                    <h1 class="text-center text-uppercase title">Add Task</h1>

                    <div class="form-group">
                        <label for="project">Project:</label>
                        <select class="form-control" id="project" name="Project">
                            <option value="HRMS">HRMS</option>
                            <option value="AIMS">AIMS</option>
                            <option value="Syanko">Syanko</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="title">Task Title:</label>
                        <input type="text" name="Title" id="title" class="form-control" />
                    </div>


                    <div class="form-group d-flex align-items-center">
                        <label class="mr-2">Priority:</label>

                        <input type="radio" class="btn-check" name="options-outlined" id="high" autocomplete="off" value="High-priority" checked>
                        <label class="btn btn-outline-danger" for="high" id="high">High</label>

                        <input type="radio" class="btn-check" name="options-outlined" id="medium" autocomplete="off" value="Medium-priority">
                        <label class="btn btn-outline-success" for="medium" id="medium">Medium</label>

                        <input type="radio" class="btn-check" name="options-outlined" id="low" autocomplete="off" value="Low-priority">
                        <label class="btn btn-outline-secondary" for="low" id="low">Low</label>
                    </div>

                    <div class="form-group">
                        <label for="deparment">Department:</label>
                        <select class="form-control" id="department" name="Department">
                            <option value="Development">Development</option>
                            <option value="HRM">Human Resource Management</option>
                            <option value="Management">Management</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="employee">Assign To:</label>
                        <select class="form-control" id="employee" name="Employee" multiple placeholder='Select Employees'>
                            <option value="Bikash Dumrakoti">Bikash Dumrakoti</option>
                            <option value="Brajesh Gupta">Brajesh Gupta</option>
                            <option value="Dorje Lama">Dorje Lama</option>
                            <option value="Ram Kumar Shrestha">Ram Kumar Shrestha</option>
                            <option value="Sujan Yonjan">Sujan Yonjan</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="dFrom">From:</label>
                            <input type="datetime-local" name="Start Date" id="dFrom" class="form-control" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="dTo">To:</label>
                            <input type="datetime-local" name="Deadline" id="dTo" class="form-control" />
                        </div>
                    </div>

                    @*Actions button*@
                    <div class="d-flex justify-content-end align-items-center">
                        <button class="btn btn-outline-dark  w-30 mr-2 p-2" type="button" data-dismiss="modal">Close</button>
                        <button class="btn btn-primary w-30 p-2" type="submit">Create</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

<script>
