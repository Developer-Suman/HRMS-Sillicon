@{
    ViewData["title"] = "All Tasks";
}

<link href="~/css/TaskManager/allTasks.css" rel="stylesheet" />

@*Add Task Button*@
@await Html.PartialAsync("~/Views/TaskManager/_AddTask.cshtml")

<section id="all-tasks">
    <div class="card">
        <div class="card-body">
            <div class="container d-flex justify-content-between align-items-center">
                <h5>All Tasks</h5>

                @*Filter by Deadline or/and status*@
                <div class="d-flex ">
                    <div class="form-group mr-2">
                        <input type="date" name="search-deadline" id="search-deadline" class="form-control" />
                    </div>

                    <div class="form-group">
                        <select name="status" id="status" class="form-control">
                            <option value="todo">To Do</option>
                            <option value="running">Running</option>
                            <option value="completed">Completed</option>
                            <option value="overdue">Overdue</option>
                        </select>
                    </div>
                </div>
            </div>

            @*tasks detail*@
            <table class="table table-responsive table-borderless">
                <thead>
                    <tr>
                        <th>SN</th>
                        <th>Task Title</th>
                        <th>Project</th>
                        <th>Status</th>
                        <th>Assigned To</th>
                        <th>Start Date</th>
                        <th>Deadline</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Upload Project to Git</td>
                        <td>HRMS</td>
                        @*running -> status classname should be dyanmic*@
                        <td class="running">Running</td>
                        <td class="employee">

                            <div class="employee-image__container">
                                <img src="https://images.unsplash.com/photo-1570295999919-56ceb5ecca61?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="Brajesh Gupta" />
                                <span class="employee-name">Brajesh Gupta</span>
                            </div>
                            <div class="employee-image__container">
                                <img src="https://images.unsplash.com/photo-1633332755192-727a05c4013d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="Ram Kumar Shrestha" />
                                <span class="employee-name">Ram Kumar Shrestha</span>
                            </div>
                        </td>
                        <td>2022/07/01</td>
                        <td>2022/07/02</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Update Pharmacy Design</td>
                        <td>AIMS</td>
                        <td class="todo">To Do</td>
                        <td class="employee">
                            <div class="employee-image__container">
                                <img src="https://images.unsplash.com/photo-1519085360753-af0119f7cbe7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="Bikash Dumrakoti" />
                                <span class="employee-name">Bikash Dumrakoti</span>
                            </div>
                            <div class="employee-image__container">
                                <img src="https://images.unsplash.com/flagged/photo-1573740144655-bbb6e88fb18a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=435&q=80" alt="Sujan Yonjan" />
                                <span class="employee-name">Sujan Yonjan</span>
                            </div>
                        </td>
                        <td>2022/07/01</td>
                        <td>2022/07/02</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Manage a project summary meeting</td>
                        <td>Syanko</td>
                        <td class="completed">Completed</td>
                        <td class="employee">
                            <div class="employee-image__container">
